// NMTRAN Extension Debug Configuration
//
// Usage:
// 1. Press F5 or select "Launch Extension" to start debugging
// 2. For full debugging, use "Debug Extension + Server" compound
// 3. Test files are available in the test/ folder
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extension",
        "mark-wiemer.vscode-autohotkey-plus-plus",
        "--disable-extension",
        "activitywatch.aw-watcher-vscode",
        "--disable-extension",
        "ms-azuretools.vscode-containers",
        "--disable-extension",
        "posit.databot",
        "--disable-extension",
        "usernamehw.errorlens",
        "--disable-extension",
        "tamasfe.even-better-toml",
        "--disable-extension",
        "ms-vscode.hexeditor",
        "--disable-extension",
        "oderwat.indent-rainbow",
        "--disable-extension",
        "etiennebacher.jarl-vscode",
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--extensionDevelopmentPath=C:/Users/viktor.rognas/git_repos/sven",
        "--extensionDevelopmentPath=C:/Users/viktor.rognas/git_repos/redmyne",
        "C:/Projects/test/Test-Viktor"
      ],
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/**/*.js"],
      "env": {
        "VSCODE_DEBUG_MODE": "true"
      }
    },
    {
      "name": "Attach to Language Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/server/out/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": ["<node_internals>/**"],
      "timeout": 30000
    },
    {
      "name": "Quick Test (No Server Debug)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--folder-uri=${workspaceFolder}/test"
      ],
      "outFiles": ["${workspaceFolder}/client/out/**/*.js"],
      "preLaunchTask": "npm: compile"
    }
  ],
  "compounds": [
    {
      "name": "Debug Extension + Server",
      "configurations": ["Launch Extension", "Attach to Language Server"],
      "stopAll": true
    }
  ]
}
