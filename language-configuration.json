{
    "comments": {
        "lineComment": ";"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "`", "close": "`", "notIn": ["string", "comment"] }
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""],
        ["`", "`"]
    ],
    "wordPattern": "(?i)\\b(THETA|ETA|EPS|ERR)\\(\\d+\\)|\\$[A-Z]+|\\b[A-Z_][A-Z0-9_]*\\b|\\b[a-z_][a-zA-Z0-9_]*\\b|(?:\\.(?:EQ|NE|LE|GE|LT|GT|AND|OR)\\.)|(?:==|/=|<=|>=|<|>)",
    "folding": {
        "markers": {
            "start": "(?i)^\\s*IF\\s*.*\\s*THEN\\s*$|^\\$[A-Z]+",
            "end": "(?i)^\\s*ENDIF\\s*$|^\\$[A-Z]+"
        }
    }
}